<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <Description>Authorization middlewares for Bibliotheca microservices.</Description>
    <AssemblyTitle>Bibliotheca.Server.Mvc.Middleware.Authorization</AssemblyTitle>
    <NeutralLanguage>C#</NeutralLanguage>
    <VersionPrefix>1.1.7</VersionPrefix>
    <Authors>@mczachurski</Authors>
    <TargetFramework>netstandard2.0</TargetFramework>
    <TreatWarningsAsErrors>true</TreatWarningsAsErrors>
    <DebugType>portable</DebugType>
    <AssemblyName>Bibliotheca.Server.Mvc.Middleware.Authorization</AssemblyName>
    <PackageId>Bibliotheca.Server.Mvc.Middleware.Authorization</PackageId>
    <PackageProjectUrl>https://github.com/mczachurski/Bibliotheca.Server.Mvc.Middleware</PackageProjectUrl>
    <PackageLicenseUrl>https://opensource.org/licenses/MIT</PackageLicenseUrl>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.AspNetCore.Mvc" Version="2.0.0" />
    <PackageReference Include="Microsoft.AspNetCore.Authentication.JwtBearer" Version="2.0.0" />
    <PackageReference Include="Flurl" Version="2.4.0" />
  </ItemGroup>

</Project>
